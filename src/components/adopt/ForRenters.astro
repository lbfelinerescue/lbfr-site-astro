---
import InputDynamicLabel from './InputDynamicLabel.astro';
import TextAreaDynamicLabel from './TextAreaDynamicLabel.astro';
import PetPermission from './PetPermission.astro';
---
<style>
    .applicant-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
        width: 100%;
    }
    @media screen and (max-width: 700px) {
        .applicant-info {
            grid-template-columns: 1fr;
        }
    }
    .one-col-full-width {
        display: grid;
        grid-template-columns: 1fr;
        gap: 10px;
        width: 100%;
    }
</style>
<div class = "one-col-full-width">
  <h5>For renters:</h5>
  <TextAreaDynamicLabel
    textareaName = "multi-unit-pet-rules"
    textareaId = "multi-unit-pet-rules"
    textareaRows = "6"
    textareaRequired = false
    labelText = "What are the rules about keeping pets?"
  />
</div>

<div class = "applicant-info">
  <InputDynamicLabel
    inputType = "text"
    inputName = "landlord-name"
    inputId = "landlord-name"
    inputRequired = false
    labelText = "Landlord Name"
  />
  <InputDynamicLabel
    inputType = "tel"
    inputName = "landlord-phone"
    inputId = "landlord-phone"
    inputRequired = false
    labelText = "Landlord Phone Number"
  />
</div>

<PetPermission />

---
const { frontmatter } = Astro.props;

import '../styles/main.scss';
import '../styles/forms.css';

import Header from '../components/Header.astro';
import GenericBanner from '../components/GenericBanner.astro';
import GenericContent from '../components/GenericContent.astro';
import Footer from '../components/Footer.astro';
import Scripts from '../components/Scripts.astro';
import FormScripts from '../components/lib/FormScripts.astro';
import HeadMeta from '../components/HeadMeta.astro';
---
<!DOCTYPE HTML>
<!--
    Spectral by HTML5 UP
    html5up.net | @ajlkn
    Free for personal and commercial use under the CCA 3.0 license (html5up.net/license)
-->
<html>
    <head>
      <HeadMeta />
    </head>
    <body class="is-preload">
        <!-- Page Wrapper -->
        <div id="page-wrapper">
            <Header />
            <article id="main">
            <GenericBanner bannerTitle={frontmatter.bannerTitle} bannerText={frontmatter.bannerText} />
                <slot />
            </article>
            <Footer />
        </div>
        <Scripts />
        <FormScripts />
    </body>
</html>

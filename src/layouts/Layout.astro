-->
<html>
    <head>
      <HeadMeta />
    </head>
    <style>
      #page-wrapper {
        background-image: url("/images/banner.jpg");
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
        padding: 0
      }
    </style>
    <body class="is-preload">
        <!-- Page Wrapper -->
        <div id="page-wrapper">
            <Header />
            <slot />
            <Contact />
            <Footer />
        </div>
        <Scripts />
        <FormScripts />
    </body>
</html>
